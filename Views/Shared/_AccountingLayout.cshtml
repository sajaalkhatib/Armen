<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - آرمن للشحن</title>
    
    <!-- CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.rtl.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;600;700;900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">
    <link rel="stylesheet" href="~/css/accounting.css" asp-append-version="true">
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <!-- Sidebar Toggle Button -->
    <button class="sidebar-toggle" id="sidebarToggleBtn">
        <i class="fas fa-bars"></i>
    </button>

    <!-- Sidebar -->
    <aside class="sidebar" id="sidebar">
        <div class="sidebar-header">
            <h2 class="sidebar-logo">آرمن للشحن</h2>
            <p class="sidebar-subtitle">قسم المحاسبة</p>
        </div>
        
        <div class="sidebar-user">
            <div class="sidebar-avatar">
                <i class="fas fa-user"></i>
            </div>
            <h3 class="sidebar-username">سارة محمود</h3>
            <p class="sidebar-role">محاسبة رئيسية</p>
        </div>
        
        <nav class="sidebar-nav">
            <a asp-controller="Accounting" asp-action="Dashboard" class="sidebar-item">
                <i class="fas fa-chart-pie"></i>
                <span>لوحة التحكم</span>
            </a>
           
            <a asp-controller="Accounting" asp-action="TasksDetalse" class="sidebar-item">
                <i class="fas fa-file-invoice-dollar"></i>
                <span>
                    تفاصيل المهام المالية
              </span>
            </a>
            
            <div class="sidebar-divider"></div>
			
			
            <a asp-controller="Accounting" asp-action="Profile" class="sidebar-item">
                <i class="fas fa-user-circle"></i>
                <span>الملف الشخصي</span>
            </a>
        
        </nav>
        
        <div class="sidebar-footer">
            <a href="#" class="sidebar-item">
                <i class="fas fa-sign-out-alt"></i>
                <span>تسجيل الخروج</span>
            </a>
        </div>
    </aside>

    <!-- Main Content -->
    <main class="main-content" id="mainContent">
        @RenderBody()
    </main>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/accounting.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
