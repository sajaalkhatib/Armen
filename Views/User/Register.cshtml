@{
    ViewData["Title"] = "إنشاء حساب جديد";
    Layout = null;
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>إنشاء حساب جديد | آرمن للشحن</title>
    
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;700;900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">
    <link rel="stylesheet" href="~/css/register.css" asp-append-version="true" />
</head>
<body>
    <video autoplay muted loop id="bg-video">
        <source src="~/lib/LOGIN.mp4" type="video/mp4">
        <!-- Fallback for browsers that don't support video -->
        Your browser does not support the video tag.
    </video>
    
    <div class="register-container fade-in">
        <div class="register-card">
            <div class="logo">
                <h1>آرمن</h1>
                <p>انضم لعائلة آرمن اليوم</p>
            </div>
            
            <form asp-controller="User" asp-action="Register" method="post" id="registerForm">
                <div class="form-group slide-in">
                    <label for="name">الاسم الكامل</label>
                    <input type="text" id="name" name="name" class="input-field" placeholder="محمد أحمد العلي" required>
                </div>

                <div class="form-group slide-in">
                    <label for="email">البريد الإلكتروني</label>
                    <input type="email" id="email" name="email" class="input-field" placeholder="example@armen.com" required>
                </div>

                <div class="form-group slide-in">
                    <label for="phone">رقم الهاتف</label>
                    <input type="tel" id="phone" name="phone" class="input-field" placeholder="+970 59 123 4567" required>
                </div>
                
                <div class="form-group slide-in">
                    <label for="password">كلمة المرور</label>
                    <input type="password" id="password" name="password" class="input-field" placeholder="••••••••" required minlength="6">
                </div>

                <div class="form-group slide-in">
                    <label for="confirmPassword">تأكيد كلمة المرور</label>
                    <input type="password" id="confirmPassword" name="confirmPassword" class="input-field" placeholder="••••••••" required>
                </div>

                <div class="form-group slide-in">
                    <div class="remember-me">
                        <input type="checkbox" id="terms" name="terms" required>
                        <label for="terms">أوافق على <a href="#" class="forgot-password">الشروط والأحكام</a></label>
                    </div>
                </div>
                
                <button type="submit" class="submit-btn slide-in">
                    <i class="fas fa-user-plus" style="margin-left: 8px;"></i>
                    إنشاء حساب جديد
                </button>
            </form>
            
            <div class="login-link slide-in">
                لديك حساب بالفعل؟ 
                <a asp-controller="User" asp-action="Login">تسجيل الدخول</a>
            </div>
        </div>
    </div>

    <script src="~/js/register.js" asp-append-version="true"></script>
</body>
</html>