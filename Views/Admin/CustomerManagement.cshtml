@{
    ViewData["Title"] = "CustomerManagement";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/CustomerManagement.css" asp-append-version="true" />
}
@section Scripts {
    <script src="~/js/CustomerManagement.js" asp-append-version="true"></script>
}

<script src="~/js/CustomerManagement.js" asp-append-version="true" defer></script>

<!-- المحتوى الرئيسي -->
<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h4 class="mb-0">قائمة العملاء</h4>
        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#clientModal">
            + إضافة عميل جديد
        </button>
    </div>
    <div class="card">
        <div class="table-responsive">
            <table class="data-table table table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>الاسم الكامل</th>
                        <th>رقم الهوية</th>
                        <th>الهاتف</th>
                        <th>البريد الإلكتروني</th>
                        <th>عدد الطلبات</th>
                        <th>الإجراءات</th>
                    </tr>
                </thead>
                <tbody id="clientsTable">
                    <!-- سيتم ملؤه بالبيانات عبر JavaScript -->
                </tbody>
            </table>
        </div>
        <!-- الترقيم الصفحي -->
        <nav class="mt-4">
            <ul class="pagination justify-content-center" id="pagination">
                <!-- سيتم ملؤه بالبيانات عبر JavaScript -->
            </ul>
        </nav>
    </div>
</div>

<!-- Modal إضافة/تعديل عميل -->
<div class="modal fade" id="clientModal" tabindex="-1" aria-labelledby="clientModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header" style="background: linear-gradient(135deg, var(--primary) 0%, #034a5b 100%); color: white; border: none;">
                <div>
                    <h5 class="modal-title mb-0" id="clientModalLabel">
                        إضافة عميل جديد
                    </h5>
                    <small class="opacity-75">أدخل معلومات العميل</small>
                </div>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="clientId">
                <div class="row">
                    <div class="col-12 mb-3">
                        <label for="fullName" class="form-label">
                            الاسم الكامل
                        </label>
                        <input type="text" class="form-control border-primary" id="fullName" required placeholder="أدخل الاسم الكامل">
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="nationalId" class="form-label">
                            رقم الهوية
                        </label>
                        <input type="text" class="form-control border-primary" id="nationalId" required placeholder="رقم الهوية">
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="phone" class="form-label">
                            الهاتف
                        </label>
                        <input type="tel" class="form-control border-primary" id="phone" required placeholder="رقم الهاتف">
                    </div>
                    <div class="col-12 mb-3">
                        <label for="email" class="form-label">
                            البريد الإلكتروني
                        </label>
                        <input type="email" class="form-control border-primary" id="email" required placeholder="البريد الإلكتروني">
                    </div>
                    <div class="col-12 mb-3">
                        <label for="status" class="form-label">
                            الحالة
                        </label>
                        <select class="form-control border-primary" id="status">
                            <option value="active">نشط</option>
                            <option value="inactive">غير نشط</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    إلغاء
                </button>
                <button type="button" class="btn btn-primary" id="saveClientBtn">
                    حفظ
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Modal عرض الطلبات -->
<div class="modal fade" id="ordersModal" tabindex="-1" aria-labelledby="ordersModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header" style="background: linear-gradient(135deg, var(--primary) 0%, #034a5b 100%); color: white; border: none;">
                <div>
                    <h5 class="modal-title mb-0" id="ordersModalLabel">
                        طلبات العميل
                    </h5>
                    <h4 id="clientNameTitle" class="mb-0 opacity-75"></h4>
                </div>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="card border-0">
                    <div class="card-body p-0">
                        <div class="table-container">
                            <table class="table mb-0">
                                <thead>
                                    <tr>
                                        <th>رقم الطلب</th>
                                        <th>نوع الطلب</th>
                                        <th>تاريخ التقديم</th>
                                        <th>المرفقات</th>
                                        <th>الإجراءات</th>
                                    </tr>
                                </thead>
                                <tbody id="ordersTable">
                                    <!-- سيتم ملؤه بالبيانات عبر JavaScript -->
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    إغلاق
                </button>
            </div>
        </div>
    </div>
</div>  
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
